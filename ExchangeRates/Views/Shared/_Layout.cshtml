<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/jquery-ui-1.11.3.custom/jquery-ui.css">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" style="color:white">
            <h2>Choose range:</h2>
            <br />
@using (Html.BeginForm("Some", "Test", FormMethod.Post))
{
            <label>From: </label><input type="text" name="from" id="datepicker"><label>To: </label><input name="to" type="text" id="datepicker1">
            <br />          
            <label>Currency: </label><select name="Money">
            <option>RUB</option>
                                         <option>EUR</option>
                                         <option>USD</option>
                                         <option>GBP</option>
                                         <option>JPY</option>
            </select>
                        <br />
           
                <button type="submit" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-bell" aria-hidden="true"></span> Show chart</button>
}
            <br />
            <br />
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


         @Scripts.Render("~/bundles/jquery")
         @Scripts.Render("~/bundles/bootstrap")
         @RenderSection("scripts", required: false)
    <script src="~/Content/jquery-ui-1.11.3.custom/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker();
        });
        $(function () {
            $("#datepicker1").datepicker();
        });
    </script>
    <script src="http://code.highcharts.com/highcharts.js"></script>
    <script src="http://code.highcharts.com/modules/exporting.js"></script>
    <script src="~/Scripts/chart.js"></script>
</body>
</html>